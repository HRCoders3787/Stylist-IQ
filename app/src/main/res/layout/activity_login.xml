<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Login.Login">

    <!--    Bg Doodle-->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_doodle"
        android:backgroundTintMode="screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/no_acc_LL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        Back btn-->
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_icon"
            app:backgroundTint="#00000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <!--            LL for texts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/be_vietnam_thin"
                    android:text="@string/asterisk"
                    android:textColor="@color/yellow"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/login"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

            </LinearLayout>

            <!--            Text fields-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="36dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/phone"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#05FFFFFF"
                        android:padding="12dp"
                        android:hint="+91"
                        android:fontFamily="@font/raleway_medium"
                        android:textColorHint="#80FFFFFF"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <!--            LL for btns-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <!--                <com.google.android.material.button.MaterialButton-->
                <!--                    style="@style/Widget.Material3.Button.TextButton.Icon"-->
                <!--                    android:id="@+id/bSearch"-->
                <!--                    android:layout_width="fill_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:icon="@drawable/arrow_with_bg_icon"-->
                <!--                    app:iconGravity="end"-->
                <!--                    android:textAllCaps="false"-->
                <!--                    app:iconSize="42dp"-->
                <!--                    android:textAlignment="center"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    app:cornerRadius="100dp"-->
                <!--                    android:text="@string/login"-->
                <!--                    android:lineSpacingExtra="2sp"-->
                <!--                    android:fontFamily="@font/be_vietnam_pro_medium"-->
                <!--                    android:backgroundTint="@color/white"-->
                <!--                    android:textSize="18sp"-->
                <!--                    android:textColor="@color/black"/>-->

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/arrow_with_bg_icon"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:gravity="center"
                    android:padding="4dp"
                    android:paddingStart="36dp"
                    android:paddingEnd="4dp"
                    android:text="@string/login"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="100dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="145dp"
                        android:layout_height="1.25dp"
                        android:background="@color/or_dash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/be_vietnam_pro_medium"
                        android:text="@string/or"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="145dp"
                        android:layout_height="1.25dp"
                        android:background="@color/or_dash" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/googleLoginBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/google_icon_with_bg"
                    android:fontFamily="@font/be_vietnam_pro_medium"
                    android:paddingStart="36dp"
                    android:paddingEnd="4dp"
                    android:text="@string/login_google"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="#80000000"
                    app:cornerRadius="100dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_acc_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/raleway_medium"
            android:text="@string/no_account"
            android:textColor="@color/subTxtColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/signupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/sign_up"
            android:textColor="@color/yellow"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>