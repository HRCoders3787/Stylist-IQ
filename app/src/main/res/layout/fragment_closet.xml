    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/bevietnam_pro_semibold"
                android:text="@string/schedule"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/dash_cardview_background"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:fontFeatureSettings="pnum, lnum"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/date"
                                android:textColor="@color/textColor"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/datePickerButton"
                            style="?android:spinnerStyle"
                            android:layout_width="168dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:fontFeatureSettings="pnum, lnum"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="JAN 01 2024"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:fontFeatureSettings="pnum, lnum"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/upperwear"
                                android:textColor="@color/textColor"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/upload_top"
                            android:layout_width="168dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/drop_down_background"
                            android:backgroundTint="@color/white"
                            android:button="@android:color/transparent"
                            android:drawableLeft="@drawable/select_file_icon"
                            android:fontFamily="@font/raleway_medium"
                            android:fontFeatureSettings="pnum, lnum"
                            android:gravity="center"
                            android:letterSpacing=".02"
                            android:text="@string/select_img"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:cornerRadius="100dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:fontFeatureSettings="pnum, lnum"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/bottomwear"
                                android:textColor="@color/textColor"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/upload_bottom"
                            android:layout_width="168dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/drop_down_background"
                            android:backgroundTint="@color/white"
                            android:button="@android:color/transparent"
                            android:drawableLeft="@drawable/select_file_icon"
                            android:fontFamily="@font/raleway_medium"
                            android:fontFeatureSettings="pnum, lnum"
                            android:gravity="center"
                            android:letterSpacing=".02"
                            android:text="@string/select_img"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textColorLink="#FFFFFF"
                            android:textSize="16sp"
                            app:cornerRadius="100dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:scaleType="fitCenter" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_marginStart="8dp"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:scaleType="fitCenter" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <GridView
                android:id="@+id/weather_suggestions_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:horizontalSpacing="12dp"
                android:numColumns="2"
                android:verticalSpacing="10dp" />
